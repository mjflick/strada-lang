# optional_params.strada - Test optional/default parameters

func greet(str $name, str $greeting = "Hello") void {
    say($greeting . ", " . $name . "!");
}

func add_numbers(int $a, int $b = 10, int $c = 5) int {
    return $a + $b + $c;
}

func format_message(str $text, str $prefix = "[INFO]", str $suffix = "") str {
    my str $result = $prefix . " " . $text;
    
    if ($suffix != "") {
        $result = $result . " " . $suffix;
    }
    
    return $result;
}

func main() int {
    say("=== Optional Parameters Test ===");
    say("");
    
    say("--- Greetings ---");
    greet("Alice", "Hi");           # Both provided
    greet("Bob", "Welcome");        # Both provided
    greet("Carol");                 # Use default greeting
    
    say("");
    say("--- Number Addition ---");
    say("5 + 10 + 5 = " . add_numbers(5, 10, 5));    # All provided
    say("5 + 10 + 5 = " . add_numbers(5, 10));       # Use default c
    say("5 + 10 + 5 = " . add_numbers(5));           # Use default b and c
    
    say("");
    say("--- Message Formatting ---");
    say(format_message("System started", "[INFO]", "OK"));
    say(format_message("Warning detected", "[WARN]"));
    say(format_message("Simple message"));
    
    say("");
    say("âœ“ Optional parameters working!");
    
    return 0;
}
