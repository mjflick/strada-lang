# Math/Utils.sm - Math utility module
package Math::Utils;

func add(int $a, int $b) int {
    return $a + $b;
}

func subtract(int $a, int $b) int {
    return $a - $b;
}

func multiply(int $a, int $b) int {
    return $a * $b;
}

func square(int $n) int {
    return $n * $n;
}

func factorial(int $n) int {
    if ($n <= 1) {
        return 1;
    }
    return $n * factorial($n - 1);
}
