# Test remaining features

struct Point {
    int x;
    int y;
}

struct Person {
    str name;
    int age;
}

# Test string fields
func new_person(str $name, int $age) Person {
    my Person $p;
    # Note: string fields need special handling
    $p->age = $age;
    return $p;
}

# Test: num fields 
struct Data {
    int count;
    num value;
}

func new_data(int $c, num $v) Data {
    my Data $d;
    $d->count = $c;
    $d->value = $v;
    return $d;
}

func main() int {
    say("=== Remaining Feature Tests ===");
    
    # Test num field
    my Data $d = new_data(5, 3.14);
    say("count = " . $d->count);
    say("value = " . $d->value);
    
    say("");
    say("Tests complete!");
    
    return 0;
}
