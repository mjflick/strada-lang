# Test __FILE__ and __LINE__ magic constants, plus hex literals

func show_location() void {
    say("Called from: " . __FILE__ . " at line " . __LINE__);
}

func main() int {
    say("=== Magic Constants and Hex Literals Demo ===");
    say("");

    # __FILE__ returns the current source file name
    say("Current file: " . __FILE__);

    # __LINE__ returns the current line number
    say("Current line: " . __LINE__);

    say("");
    say("Calling a function that prints its location:");
    show_location();

    say("");
    say("=== Hexadecimal Literals ===");

    # Hex literals (0x prefix)
    my int $a = 0x10;      # 16 in decimal
    my int $b = 0xFF;      # 255 in decimal
    my int $c = 0xCAFE;    # 51966 in decimal
    my int $d = 0xDEADBEEF; # 3735928559 in decimal

    say("0x10 = " . $a);
    say("0xFF = " . $b);
    say("0xCAFE = " . $c);
    say("0xDEADBEEF = " . $d);

    say("");
    say("Hex in expressions:");
    say("0x10 + 0x20 = " . (0x10 + 0x20));  # 16 + 32 = 48
    say("0xFF & 0x0F = " . (0xFF & 0x0F));  # Bitwise AND = 15

    return 0;
}
