# Test edge cases for native structs

struct Point {
    int x;
    int y;
}

struct Person {
    str name;
    int age;
    num salary;
}

# Test 1: Multiple struct params
func add_points(Point $a, Point $b) Point {
    my Point $result;
    $result->x = $a->x + $b->x;
    $result->y = $a->y + $b->y;
    return $result;
}

# Test 2: Nested function calls with structs
func double_point(Point $p) Point {
    my Point $doubled;
    $doubled->x = $p->x * 2;
    $doubled->y = $p->y * 2;
    return $doubled;
}

func main() int {
    say("=== Edge Case Tests ===");
    
    # Test multiple struct params
    my Point $p1;
    $p1->x = 10;
    $p1->y = 20;
    
    my Point $p2;
    $p2->x = 5;
    $p2->y = 15;
    
    my Point $sum = add_points($p1, $p2);
    say("p1 + p2 = (" . $sum->x . ", " . $sum->y . ")");
    
    # Test chained/nested calls
    my Point $doubled = double_point($p1);
    say("doubled = (" . $doubled->x . ", " . $doubled->y . ")");
    
    say("");
    say("All edge cases passed!");
    
    return 0;
}
