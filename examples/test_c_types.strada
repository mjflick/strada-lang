# test_c_types.strada - Test all C data types

struct AllTypes {
    char c;
    short s;
    int i;
    long l;
    float f;
    num d;
    bool b;
    uchar uc;
    ushort us;
    uint ui;
    ulong ul;
    i8 x8;
    i16 x16;
    i32 x32;
    i64 x64;
    u8 y8;
    u16 y16;
    u32 y32;
    u64 y64;
    size sz;
    ptr p;
}

func print_all(AllTypes $t) void {
    say("=== All C Types ===");
    say("char:    " . $t->c);
    say("short:   " . $t->s);
    say("int:     " . $t->i);
    say("long:    " . $t->l);
    say("float:   " . $t->f);
    say("double:  " . $t->d);
    say("bool:    " . $t->b);
    say("uchar:   " . $t->uc);
    say("ushort:  " . $t->us);
    say("uint:    " . $t->ui);
    say("ulong:   " . $t->ul);
    say("i8:      " . $t->x8);
    say("i16:     " . $t->x16);
    say("i32:     " . $t->x32);
    say("i64:     " . $t->x64);
    say("u8:      " . $t->y8);
    say("u16:     " . $t->y16);
    say("u32:     " . $t->y32);
    say("u64:     " . $t->y64);
    say("size_t:  " . $t->sz);
    say("ptr:     " . $t->p);
}

func main() int {
    say("╔══════════════════════════════════════╗");
    say("║  Complete C Types Test               ║");
    say("╚══════════════════════════════════════╝");
    say("");
    
    my AllTypes $t;
    
    # Set all fields
    $t->c = 65;       # 'A'
    $t->s = 1000;
    $t->i = 42;
    $t->l = 9876543210;
    $t->f = 3.14;
    $t->d = 2.71828;
    $t->b = 1;        # true
    $t->uc = 255;
    $t->us = 65535;
    $t->ui = 4000000000;
    $t->ul = 18446744073709551615;
    $t->x8 = -128;
    $t->x16 = -32768;
    $t->x32 = -2147483648;
    $t->x64 = -9223372036854775808;
    $t->y8 = 255;
    $t->y16 = 65535;
    $t->y32 = 4294967295;
    $t->y64 = 18446744073709551615;
    $t->sz = 1024;
    $t->p = 0;        # NULL
    
    print_all($t);
    
    say("");
    say("╔══════════════════════════════════════╗");
    say("║  ✓ All C types working!              ║");
    say("╚══════════════════════════════════════╝");
    
    return 0;
}
