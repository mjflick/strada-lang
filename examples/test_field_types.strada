# test_field_types.strada - Test all field types (int, num, str)

struct Data {
    int count;
    num value;
    str name;
}

func new_data(int $c, num $v, str $n) Data {
    my Data $d;
    $d->count = $c;
    $d->value = $v;
    $d->name = $n;
    return $d;
}

func print_data(Data $d) void {
    say("Data:");
    say("  count = " . $d->count);
    say("  value = " . $d->value);
    say("  name  = " . $d->name);
}

func main() int {
    say("=== Field Type Test ===");
    say("");
    
    # Create with all field types
    my Data $d = new_data(42, 3.14159, "Hello World");
    
    say("Initial values:");
    print_data($d);
    
    say("");
    say("Modifying fields...");
    $d->count = 100;
    $d->value = 2.71828;
    $d->name = "Updated Name";
    
    say("");
    say("Modified values:");
    print_data($d);
    
    say("");
    say("Direct field access:");
    say("  count: " . $d->count);
    say("  value: " . $d->value);
    say("  name:  " . $d->name);
    
    say("");
    say("=== All field types working! ===");
    
    return 0;
}
